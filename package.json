{
  "name": "command-r",
  "version": "1.0.1",
  "description": "Command scheduler",
  "bin": {
    "command-r": "bin/command-r"
  },
  "preferGlobal": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "axios": "^0.17.1",
    "body-parser": "^1.18.2",
    "commander": "~2",
    "dotenv": "^5.0.1",
    "express": "~4",
    "jsonwebtoken": "^8.2.0",
    "sugar": "~2",
    "vue": "~2"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.0.0-alpha.8",
    "@vue/cli-plugin-eslint": "^3.0.0-alpha.8",
    "@vue/cli-service": "^3.0.0-alpha.8",
    "@vue/eslint-config-prettier": "^3.0.0-alpha.8",
    "lint-staged": "^6.0.0",
    "vue-template-compiler": "^2.5.13"
  },
  "babel": {
    "presets": [
      "@vue/app"
    ]
  },
  "eslintConfig": {
    "extends": [
      "plugin:vue/essential",
      "@vue/prettier"
    ]
  },
  "prettier": {
    "printWidth": 240,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "last 2 versions"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
