#!/usr/bin/env node

const program = require('commander')
  .version(require('../package').version)
  .usage('<command> [options]')

program
  .command('start')
  .description('start commandr daemon + api')
  // .option('-p, --port <port>', 'Port', x => +x, 1111)
  .action((options) => {
    const commandr_spawn = require('../commandr_spawn')
    const { pid, running } = commandr_spawn()
    if (running) return console.log('commandr running', pid, 'http://127.0.0.1:1111')
    return console.log('commandr started', pid, 'http://127.0.0.1:1111')
  })

program.parse(process.argv)

if (!program.args.length) program.help(txt => txt.replace('\n\n\n  Options:\n\n    -V, --version  output the version number\n    -h, --help     output usage information\n\n\n  Commands:\n', '\n  Commands:'))
